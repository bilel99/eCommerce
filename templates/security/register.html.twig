{% extends 'base.html.twig' %}
{% block title %}Sign out!{% endblock %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}

            <div class="offset-2 col-6 offset-2">
                <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.firstname) }}
                </div>
            </div>

            <div class="offset-2 col-6 offset-2">

                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.password) }}
                </div>

                <button type="submit" class="offset-2 col-8 btn btn-primary">
                    Sign up
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
