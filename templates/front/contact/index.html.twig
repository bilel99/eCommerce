{% extends 'base.html.twig' %}

{% block title %}Contact Request{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}

    <div class="offset-2 col-6 offset-2">
        <h1 class="h3 mb-3 font-weight-normal">Request contact</h1>

        <div class="form-group">
            {{ form_row(form.name) }}
        </div>

        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
    </div>

    <div class="offset-2 col-6 offset-2">

        <div class="form-group">
            {{ form_row(form.email) }}
        </div>

        <div class="form-group">
            {{ form_row(form.product) }}
        </div>
    </div>

    <div class="offset-2 col-6 offset-2">

        <div class="form-group">
            {{ form_row(form.message) }}
        </div>

        <button type="submit" class="offset-2 col-8 btn btn-primary">
            Validate
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
